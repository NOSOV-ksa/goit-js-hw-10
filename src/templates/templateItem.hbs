{{#each this}}
<div class="country-card">
    <div class="img-flag">
        <img width="100" src="{{flags.svg}}" alt="{{name.official}}">
        <h2 class="card-title">{{name.official}}</h2>
    </div>
    <p class="card-text">Capital: <span class="card-text--fill">{{capital}}</span></p>
    <p class="card-text">Population: <span class="card-text--fill">{{population}}</span></p>
    <p class="card-text">Languages:{{#each languages}}<span class="card-text--fill">{{this}}</span>{{/each}}</p>
</div>
{{/each}}
